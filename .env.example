# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
REACT_APP_FIREBASE_PROJECT_ID=your_firebase_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
REACT_APP_FIREBASE_APP_ID=your_firebase_app_id

# PostgreSQL Configuration
REACT_APP_POSTGRES_HOST=localhost
REACT_APP_POSTGRES_PORT=5432
REACT_APP_POSTGRES_USER=postgres
REACT_APP_POSTGRES_PASSWORD=postgres_password
REACT_APP_POSTGRES_DATABASE=project_management

# Apache AGE Configuration
REACT_APP_APACHE_AGE_ENABLED=true
REACT_APP_APACHE_AGE_VERSION=1.0.0

# n8n Configuration
REACT_APP_N8N_API_URL=http://localhost:5678/api/
REACT_APP_N8N_API_KEY=your_n8n_api_key

# AI Configuration for Workflow Generator
REACT_APP_OPENAI_API_KEY=your_openai_api_key
REACT_APP_AI_MODEL=gpt-4

# Archon Configuration
REACT_APP_ARCHON_API_URL=http://localhost:8000/api
REACT_APP_ARCHON_API_KEY=your_archon_api_key
REACT_APP_ARCHON_VECTOR_DB=pinecone
REACT_APP_ARCHON_EMBEDDING_MODEL=text-embedding-ada-002
REACT_APP_ARCHON_COMPLETION_MODEL=gpt-4-turbo

# Jira Notification Configuration
REACT_APP_JIRA_WEBHOOK_URL=https://your-domain.atlassian.net/rest/webhooks/1.0/webhook
REACT_APP_JIRA_NOTIFICATION_INTERVAL=15 # minutes

# WhatsApp Business API Configuration
REACT_APP_WHATSAPP_API_URL=https://graph.facebook.com/v17.0
REACT_APP_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
REACT_APP_WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
REACT_APP_WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token

# Zoom API Configuration
REACT_APP_ZOOM_API_KEY=your_zoom_api_key
REACT_APP_ZOOM_API_SECRET=your_zoom_api_secret
REACT_APP_ZOOM_ACCOUNT_EMAIL=your_zoom_account_email

# FireFlies.ai API Configuration
REACT_APP_FIREFLIES_API_KEY=your_fireflies_api_key
REACT_APP_FIREFLIES_WORKSPACE_ID=your_fireflies_workspace_id

# Read.ai API Configuration
REACT_APP_READAI_API_KEY=your_readai_api_key
REACT_APP_READAI_ORG_ID=your_readai_org_id

# Content Automation Configuration
REACT_APP_CONTENT_AUTOMATION_ENABLED=false
REACT_APP_CONTENT_AUTOMATION_INTERVAL=15
REACT_APP_CONTENT_AUTOMATION_MAX_EMAILS=10
REACT_APP_CONTENT_AUTOMATION_LABEL=Processed-Content

# Email Delivery Configuration
REACT_APP_EMAIL_SERVICE=smtp # smtp, sendgrid, mailgun, gmail
REACT_APP_EMAIL_API_KEY=your_api_key # For SendGrid or Mailgun
REACT_APP_EMAIL_DOMAIN=your_domain # For Mailgun
REACT_APP_EMAIL_SMTP_HOST=smtp.example.com
REACT_APP_EMAIL_SMTP_PORT=587
REACT_APP_EMAIL_SMTP_SECURE=false
REACT_APP_EMAIL_USERNAME=your_username
REACT_APP_EMAIL_PASSWORD=your_password
REACT_APP_EMAIL_FROM_ADDRESS=noreply@example.com
REACT_APP_EMAIL_FROM_NAME=Project Management App

# CEO Report Configuration
REACT_APP_CEO_REPORT_ENABLED=false
REACT_APP_CEO_REPORT_SCHEDULE=08:00 # Time in 24h format
REACT_APP_CEO_REPORT_DAYS=1,2,3,4,5 # Monday to Friday
REACT_APP_CEO_EMAIL=ceo@example.com
REACT_APP_CEO_NAME=CEO Name
REACT_APP_PM_EMAIL=pm@example.com
REACT_APP_PM_NAME=Project Manager Name
